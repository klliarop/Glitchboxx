# WireGuard server private key (leave blank to auto-generate)
WG_SERVER_PRIVATE_KEY=

# WireGuard server public key (leave blank to auto-generate)
WG_SERVER_PUBLIC_KEY=

# VPN address for the server (e.g., 10.0.0.1/24)
WG_SERVER_ADDRESS=10.0.0.1/24

# WireGuard listen port
WG_SERVER_PORT=port

# Public endpoint for clients to connect (e.g., your public IP:port)
WG_SERVER_ENDPOINT=YOUR_PUBLIC_IP:port

# Allowed IPs for clients (comma-separated)
WG_ALLOWED_IPS= 10.0.0.0/24